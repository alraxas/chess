<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.oopchess.ChessAppController">
  <top>
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
      <HBox alignment="CENTER" spacing="20">
        <Label fx:id="statusLabel" text="Ход: Белые"
               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
      </HBox>
      <HBox alignment="CENTER" spacing="15">
        <Button text="Новая Игра" onAction="#newGame"
                style="-fx-font-size: 14; -fx-padding: 5 15;"/>
      </HBox>
    </VBox>
  </top>

  <left>
    <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f8f8f8; -fx-min-width: 200;">
      <Label text="Белые" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
      <Label fx:id="whitePlayerLabel" text="Player-1"
             style="-fx-font-size: 14; -fx-padding: 0 0 10 0;"/>
      <Label text="Статус:" style="-fx-font-size: 12; -fx-text-fill: #666666;"/>
      <Label fx:id="whiteStatusLabel" text="Играет"
             style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>

      <Separator style="-fx-padding: 10 0;"/>

      <Label text="Черные" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
      <Label fx:id="blackPlayerLabel" text="Player-2"
             style="-fx-font-size: 14; -fx-padding: 0 0 10 0;"/>
      <Label text="Статус:" style="-fx-font-size: 12; -fx-text-fill: #666666;"/>
      <Label fx:id="blackStatusLabel" text="Ожидает"
             style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>

      <Separator style="-fx-padding: 20 0 10 0;"/>

      <VBox spacing="5">
        <Button text="Сдаться" onAction="#resign"
                style="-fx-font-size: 13; -fx-padding: 8 15; -fx-background-color: #F44336; -fx-text-fill: white;"/>
        <Button text="Ничья" onAction="#offerDraw"
                style="-fx-font-size: 13; -fx-padding: 8 15; -fx-background-color: #FF9800; -fx-text-fill: white;"/>
        <Button text="Отменить ход" onAction="#undoMove"
                style="-fx-font-size: 13; -fx-padding: 8 15;"/>
      </VBox>
    </VBox>
  </left>
</BorderPane>